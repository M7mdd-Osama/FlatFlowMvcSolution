@model FlatFlow.PL.ViewModels.EditClientViewModel
@{
    Layout = null;
    ViewData["ActivePage"] = "Clients";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Client - FlatFlow</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/editclientstyle.css" rel="stylesheet" />
</head>
<body>
    <div class="floating-elements"></div>

    <div class="main-container">
        <div class="row g-0 h-100">

            @await Html.PartialAsync("_Sidebar")

            <!-- Main Content -->
            <div class="col-lg-10 col-md-9">
                <div class="main-content">
                    <!-- Header Section -->
                    <div class="header-section">
                        <div class="header-content">
                            <h1>Edit Client</h1>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Apartment")" style="color: rgba(255, 255, 255, 0.7); text-decoration: none;">Dashboard</a></li>
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Client")" style="color: rgba(255, 255, 255, 0.7); text-decoration: none;">Clients</a></li>
                                    <li class="breadcrumb-item active">Edit Client</li>
                                </ol>
                            </nav>
                        </div>
                    </div>

                    <!-- Form Container -->
                    <div class="form-container">
                        <form asp-action="Edit" method="post">
                            @Html.AntiForgeryToken()

                            <input type="hidden" asp-for="Id" />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="FullName" class="form-label">
                                            <i class="fas fa-user me-2"></i>
                                            Full Name
                                        </label>
                                        <input asp-for="FullName" class="form-control" placeholder="Enter client full name" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Phone" class="form-label">
                                            <i class="fas fa-phone me-2"></i>
                                            Phone Number
                                        </label>
                                        <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Status" class="form-label">
                                            <i class="fas fa-toggle-on me-2"></i>
                                            Status
                                        </label>
                                        <select asp-for="Status" class="form-select">
                                            <option value="">Select Status</option>
                                            <option value="Active">Active</option>
                                            <option value="Inactive">Inactive</option>
                                        </select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Commission" class="form-label">
                                            <i class="fas fa-dollar-sign me-2"></i>
                                            Commission
                                        </label>
                                        <input asp-for="Commission" class="form-control" type="number" step="0.01" placeholder="Enter commission amount" />
                                        <span asp-validation-for="Commission" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="ApartmentId" class="form-label">
                                            <i class="fas fa-home me-2"></i>
                                            Apartment (Optional)
                                        </label>
                                        <select asp-for="ApartmentId" class="form-select">
                                            <option value="">Select Apartment (Optional)</option>
                                            @if (Model.Apartments != null)
                                            {
                                                @foreach (var apartment in Model.Apartments)
                                                {
                                                    <option value="@apartment.Id">@apartment.Title - $@apartment.Price/month</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="ApartmentId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Note" class="form-label">
                                            <i class="fas fa-sticky-note me-2"></i>
                                            Notes (Optional)
                                        </label>
                                        <textarea asp-for="Note" class="form-control" rows="4" placeholder="Add any additional notes about the client..."></textarea>
                                        <span asp-validation-for="Note" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex gap-3 mt-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>
                                    Update Client
                                </button>
                                <a href="@Url.Action("Index", "Client")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    Back to Clients
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>