@{
    string activePage = ViewData["ActivePage"] as string ?? "Apartments";
}

<div class="col-lg-2 col-md-3">
    <div class="sidebar">
        <h3><i class="fas fa-building"></i> FlatFlow</h3>
        <nav class="nav flex-column">
            <div class="nav-item">
                <a class="nav-link @(activePage == "Apartments" ? "active" : "")" href="/Apartment/Index">
                    <i class="fas fa-home"></i> Apartments
                </a>
            </div>
            <div class="nav-item">
                <a class="nav-link @(activePage == "Clients" ? "active" : "")" href="/Client/Index">
                    <i class="fas fa-users"></i> Clients
                </a>
            </div>
            <div class="nav-item">
                <a class="nav-link @(activePage == "Reports" ? "active" : "")" href="#">
                    <i class="fas fa-chart-bar"></i> Reports
                </a>
            </div>
            <div class="nav-item">
                <a class="nav-link @(activePage == "Settings" ? "active" : "")" href="#">
                    <i class="fas fa-cog"></i> Settings
                </a>
            </div>

            <!-- زر تسجيل الخروج -->
            <div class="nav-item logout-section">
                <form method="post" action="/Account/Logout" class="logout-form" onsubmit="return confirmLogout()">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="nav-link logout-btn">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </div>

            <!-- زر الإضافة الجديد -->
            <div class="add-apartment-btn">
                <div class="floating-add-btn" onclick="window.location.href='/Apartment/Add'">
                    <i class="fas fa-plus"></i>
                </div>
            </div>
        </nav>
    </div>
</div>

<style>
    /* CSS لزر تسجيل الخروج */
    .logout-section {
        margin: 10px 0;
    }

    .logout-form {
        margin: 0;
        padding: 0;
        width: 100%;
    }

    .logout-btn {
        width: 100%;
        padding: 10px 15px;
        background-color: #dc3545;
        color: white !important;
        border: none;
        border-radius: 5px;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 8px;
        text-decoration: none;
        font-family: inherit;
    }

        .logout-btn:hover {
            background-color: #c82333 !important;
            color: white !important;
            text-decoration: none;
        }

        .logout-btn:focus {
            outline: none;
            box-shadow: 0 0 0 2px rgba(220, 53, 69, 0.5);
        }

        .logout-btn i {
            font-size: 16px;
        }

    /* تحسين السايد بار */
    .sidebar {
        height: 100vh;
        display: flex;
        flex-direction: column;
    }

        .sidebar .nav {
            display: flex;
            flex-direction: column;
        }

    /* إضافة مساحة للزر العائم */
    .add-apartment-btn {
        margin: 20px 0;
    }

    /* تحسين شكل الزر العائم */
    .floating-add-btn {
        background: linear-gradient(45deg, #007bff, #0056b3);
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        margin: 0 auto;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

        .floating-add-btn:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 12px rgba(0,0,0,0.3);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .logout-btn {
            padding: 8px 12px;
            font-size: 12px;
        }

        .floating-add-btn {
            width: 45px;
            height: 45px;
        }
    }

    <script >
    function confirmLogout() {
        return confirm('هل أنت متأكد من تسجيل الخروج؟');
    }

    </script >
</style>