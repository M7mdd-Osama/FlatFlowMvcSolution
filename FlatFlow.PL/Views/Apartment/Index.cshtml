            border-radius: 0;
        }

        .main-content {
            border-radius: 0;
        }

            .page-title {
                font-size: 1.8rem;
                margin-bottom: 15px;
            }

        .search-form {
            padding: 15px;
        }

        .video-modal-content {
            width: 95%;
            margin: 10% auto;
        }

        .stats-card {
            height: 100px;
            padding: 10px;
        }

        .stats-icon {
            font-size: 1.5rem;
            margin-bottom: 5px;
        }

        .stats-number {
            font-size: 1.2rem;
        }

        .stats-label {
            font-size: 0.7rem;
        }

        }

        .btn-success {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            border: none;
            border-radius: 12px;
            padding: 14px 28px;
            font-weight: 600;
            font-size: 1rem;
            color: #ffffff;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 20px rgba(245, 158, 11, 0.4);
            position: relative;
            overflow: hidden;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            border: 1px solid rgba(245, 158, 11, 0.3);
        }

            .btn-success:hover {
                background: linear-gradient(135deg, #d97706, #b45309);
                transform: translateY(-3px);
                box-shadow: 0 8px 30px rgba(245, 158, 11, 0.6);
                color: #ffffff;
            }

            .btn-success::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: left 0.6s;
            }

            .btn-success:hover::before {
                left: 100%;
            }

            .btn-success:active {
                transform: translateY(-1px);
                box-shadow: 0 4px 15px rgba(16, 185, 129, 0.5);
            }

            .btn-success i {
                font-size: 1.1rem;
                transition: transform 0.3s ease;
            }

            .btn-success:hover i {
                transform: rotate(90deg) scale(1.1);
            }

            /* إضافة تأثير pulse للزر */
            .btn-success::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 50%;
                transform: translate(-50%, -50%);
                transition: width 0.6s, height 0.6s;
                z-index: 0;
            }

            .btn-success:hover::after {
                width: 300px;
                height: 300px;
            }

            .btn-success span, .btn-success i {
                position: relative;
                z-index: 1;
            }

        @@media (max-width: 768px) {
            .btn-success {
                padding: 10px 20px;
                font-size: 0.85rem;
                width: auto;
                justify-content: center;
            }

            .d-flex.justify-content-between {
                flex-direction: column;
                align-items: flex-start !important;
                gap: 15px;
            }
        }

        @@keyframes buttonEntry {
            0%

        {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .btn-success {
            animation: buttonEntry 0.8s ease-out;
        }
