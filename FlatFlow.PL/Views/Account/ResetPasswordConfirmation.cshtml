@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset Complete - FlatFlow</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/resetpasswordconfirmationstyle.css" rel="stylesheet" />
</head>
<body>
    <div class="main-container">
        <div class="floating-elements">
            <div class="floating-circle"></div>
            <div class="floating-circle"></div>
            <div class="floating-circle"></div>
        </div>

        <div class="confirmation-container">
            <div class="success-icon">
                <i class="fas fa-check"></i>
            </div>

            <h1 class="title">Password Reset Complete!</h1>

            <p class="subtitle">
                Your password has been successfully reset.
            </p>

            <p class="description">
                You can now sign in to your FlatFlow account using your new password.
                Make sure to keep your password secure and don't share it with anyone.
            </p>

            <a href="@Url.Action("Login", "Account")" class="btn-login">
                <i class="fas fa-sign-in-alt"></i>
                Sign In Now
            </a>

            <div class="security-tips">
                <h4>
                    <i class="fas fa-shield-alt"></i>
                    Security Tips
                </h4>
                <ul>
                    <li>Use a strong, unique password for your account</li>
                    <li>Don't share your login credentials with others</li>
                    <li>Sign out from public computers after use</li>
                    <li>Contact support if you notice any suspicious activity</li>
                </ul>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>