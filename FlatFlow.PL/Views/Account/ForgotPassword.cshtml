@model ForgotPasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - FlatFlow</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/forgotpasswordstyle.css" rel="stylesheet" />
</head>
<body>
    <div class="main-container">
        <!-- Left Side - Branding (same as login) -->
        <div class="left-side">
            <div class="floating-elements">
                <div class="floating-circle"></div>
                <div class="floating-circle"></div>
                <div class="floating-circle"></div>
            </div>

            <div class="brand-section">
                <div class="brand-logo">
                    <i class="fas fa-building"></i>
                </div>
                <h1 class="brand-title">FlatFlow</h1>
                <p class="brand-subtitle">Your gateway to premium apartment management</p>

                <ul class="feature-list">
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span>Manage apartments effortlessly</span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span>Track rental payments</span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span>Connect with clients</span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span>Advanced analytics</span>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Right Side - Forgot Password Form -->
        <div class="right-side">
            <div class="form-container">
                <div class="form-header">
                    <h2 class="form-title">Forgot Password</h2>
                    <p class="form-subtitle">Enter your email to reset your password</p>
                </div>

                <form method="post" action="/Account/ForgotPassword">
                    @Html.AntiForgeryToken()

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="validation-summary">
                            @Html.ValidationSummary(false, "", new { @class = "" })
                        </div>
                    }

                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <div class="input-wrapper">
                            <i class="fas fa-envelope input-icon"></i>
                            @Html.TextBoxFor(m => m.Email, new {
                            @class = "form-control",
                                                        placeholder = "Enter your email address",
                                                        required = "required"
                                                        })
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation-error" })
                    </div>

                    <button type="submit" class="btn-login">
                        <i class="fas fa-paper-plane"></i>
                        Send Reset Link
                    </button>

                    <div class="divider">
                        <span>or</span>
                    </div>

                    <div class="register-link">
                        Remember your password? <a href="/Account/Login">Sign in here</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/forgotpasswordjs.js"></script>
</body>
</html>