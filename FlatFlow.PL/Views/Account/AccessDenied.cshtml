@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied - FlatFlow</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/accessdeniedstyle.css" rel="stylesheet" />
</head>
<body>
    <div class="main-container">
        <!-- Left Side - Branding -->
        <div class="left-side">
            <div class="floating-elements">
                <div class="floating-circle"></div>
                <div class="floating-circle"></div>
                <div class="floating-circle"></div>
            </div>

            <div class="brand-section">
                <div class="brand-logo">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h1 class="brand-title">FlatFlow</h1>
                <p class="brand-subtitle">Security is our top priority</p>

                <ul class="security-list">
                    <li>
                        <i class="fas fa-lock"></i>
                        <span>Advanced security measures</span>
                    </li>
                    <li>
                        <i class="fas fa-user-shield"></i>
                        <span>Role-based access control</span>
                    </li>
                    <li>
                        <i class="fas fa-key"></i>
                        <span>Secure authentication</span>
                    </li>
                    <li>
                        <i class="fas fa-eye"></i>
                        <span>Activity monitoring</span>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Right Side - Access Denied Message -->
        <div class="right-side">
            <div class="error-container">
                <div class="error-icon">
                    <i class="fas fa-ban"></i>
                </div>

                <h2 class="error-title">Access Denied</h2>
                <p class="error-subtitle">Sorry, you don't have permission to access this resource</p>

                <div class="error-description">
                    <strong>Error Code:</strong> 403 - Forbidden<br>
                    You are not authorized to view this page or perform this action. This could be due to insufficient privileges or expired session.
                </div>

                <div class="action-buttons">
                    <a href="/Apartment/Index" class="btn-primary">
                        <i class="fas fa-home"></i>
                        Go to Dashboard
                    </a>

                    <a href="/Account/Login" class="btn-secondary">
                        <i class="fas fa-sign-in-alt"></i>
                        Login Again
                    </a>
                </div>

                <div class="divider">
                    <span>Need help?</span>
                </div>

                <div class="contact-info">
                    <strong>Contact System Administrator</strong><br>
                    If you believe this is an error, please contact your system administrator or try logging in with different credentials.
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/accessdeniedjs.js"></script>
</body>
</html>