@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset Sent - FlatFlow</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/forgotpasswordconfirmationstyle.css" rel="stylesheet" />
</head>
<body>
    <div class="main-container">
        <!-- Left Side - Branding (same as login) -->
        <div class="left-side">
            <!-- Same as ForgotPassword.cshtml -->
        </div>

        <!-- Right Side - Confirmation Message -->
        <div class="right-side">
            <div class="form-container">
                <div class="form-header">
                    <div class="text-center mb-4">
                        <i class="fas fa-check-circle" style="font-size: 3rem; color: #10b981;"></i>
                    </div>
                    <h2 class="form-title text-center">Password Reset Sent</h2>
                    <p class="form-subtitle text-center">
                        If an account exists with the email you entered, you will receive a password reset link.
                        Please check your email.
                    </p>
                </div>

                <div class="text-center mt-4">
                    <a href="/Account/Login" class="btn-login" style="display: inline-block; width: auto; padding: 10px 30px;">
                        <i class="fas fa-arrow-left"></i>
                        Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>