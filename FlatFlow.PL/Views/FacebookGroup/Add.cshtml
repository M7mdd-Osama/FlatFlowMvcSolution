@model FacebookGroupCreateViewModel
@{
    Layout = null;
    ViewData["ActivePage"] = "FacebookGroups";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Facebook Group - FlatFlow</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/addfacebookgroupstyle.css" rel="stylesheet" />
</head>
<body>
    <div class="floating-elements"></div>

    <div class="main-container">
        <div class="row g-0 h-100">

            @await Html.PartialAsync("_Sidebar")

            <!-- Main Content -->
            <div class="col-lg-10 col-md-9">
                <div class="main-content">
                    <div class="form-container">
                        <!-- Header Section -->
                        <div class="header-section">
                            <div class="breadcrumb-nav mb-3">
                                <nav class="breadcrumb">
                                    <a href="/FacebookGroup/Index">
                                        <i class="fab fa-facebook"></i>
                                        Facebook Groups
                                    </a>
                                    <span>/</span>
                                    <span>Add New Group</span>
                                </nav>
                            </div>
                            <h1 class="page-title">Add Facebook Group</h1>
                        </div>

                        <!-- Form Card -->
                        <div class="form-card">
                            <div class="form-content">
                                <div class="form-icon">
                                    <i class="fab fa-facebook-f"></i>
                                </div>
                                <h2 class="form-title">Connect Your Facebook Group</h2>

                                <div class="help-text">
                                    <i class="fas fa-info-circle"></i>
                                    <div>
                                        <strong>How to get your Facebook Group link:</strong><br>
                                        Go to your Facebook group → Click on the group name → Copy the URL from your browser's address bar.
                                    </div>
                                </div>

                                @using (Html.BeginForm("Add", "FacebookGroup", FormMethod.Post, new { @id = "facebookGroupForm", @novalidate = "novalidate" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="validation-summary-errors" asp-validation-summary="ModelOnly">
                                        <ul></ul>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.GroupName, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.GroupName, new { @class = "form-control", placeholder = "Enter Facebook group name..." })
                                        @Html.ValidationMessageFor(m => m.GroupName, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.GroupLink, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.GroupLink, new { @class = "form-control", placeholder = "https://www.facebook.com/groups/..." })
                                        @Html.ValidationMessageFor(m => m.GroupLink, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="button-group">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-plus"></i> Add Group
                                        </button>
                                        <a href="/FacebookGroup/Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancel</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts in correct order -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/addfacebookgroupjs.js"></script>
</body>
</html>